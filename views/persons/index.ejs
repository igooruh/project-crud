<%- include('../partials/header.ejs') %>
    <legend class="title-principal">List Persons</legend>

    <p class="title-principal"><a href="/persons/create">New Person</a></p>
    <table class="table table-hover table-bordered table-generic">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birth</th>
                <th>Career</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% persons.map(persons => { %>
            <tr>
                <td><%= persons.name %></td>
                <td><%= persons.birth_day %></td>
                <td><%= persons.career %></td>
                <td>
                    <a id="space-right" type="butto" class="btn btn-primary" href="/persons/edit/<%= persons.id %>">
                        Edit
                    </a>
                    <a id="space-left" type="button" class="btn btn-danger"
                        href="/persons/delete/<%= persons.id %>" onclick="return confirm('Really wants to exclude?')">
                        Exclude
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<%- include('../partials/footer.ejs') %>